{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "rootDir": "./tmp",
    "outDir": "./dist",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [ "es2015", "dom" ]
  },
  "files": [
    "./tmp/back-top.module.ts"
  ],
  "exclude": [
    "node_modules",
    "npmdist",
    "dist",
    "**/**.spec.ts"
  ],
  "include": [
    "tmp/**/*"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "genDir": "aot"
  }
}
